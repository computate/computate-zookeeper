{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "computate-zookeeper",
        "creationTimestamp": null,
        "annotations": {
            "iconClass": "icon-zookeeper",
            "tags": "zookeeper",
            "version": "3.5.3",
            "openshift.io/display-name": "Zookeeper",
            "description": "Zookeeper for managing configs in the cloud. "
        }
    },
    "parameters": [
        {
            "displayName": "Application Name",
            "description": "The name for the application.",
            "name": "APPLICATION_NAME",
            "value": "computate-zookeeper",
            "required": true
        }
        , {
            "name": "ZK_VERSION",
            "value": "3.5.3",
            "required": false
        }
        , {
            "name": "ZK_CLIENT_PORT",
            "value": "8080",
            "required": false
        }
        , {
            "name": "ZK_ADMIN_PORT",
            "value": "8081",
            "required": false
        }
    ],
    "objects": [
        {
            "kind": "Service",
            "apiVersion": "v1",
            "spec": {
                "ports": [
                    {
                        "port": 8080,
                        "targetPort": 8080
                    }
                    , {
                        "port": 8081,
                        "targetPort": 8081
                    }
                ],
                "selector": {
                    "deploymentConfig": "${APPLICATION_NAME}"
                }
            },
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                },
                "annotations": {
                    "description": "Zookeeper client port."
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "deploymentConfig": "${APPLICATION_NAME}"
                },
                "template": {
                    "metadata": {
                        "name": "${APPLICATION_NAME}",
                        "labels": {
                            "deploymentConfig": "${APPLICATION_NAME}",
                            "application": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APPLICATION_NAME}",
                                "image": "computate/computate-zookeeper",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                    , {
                                        "containerPort": 8081,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                ],
                                "securityContext": {
                                    "privileged": false
                                }
                            }
                        ]
                    }
                }
            }
        }
    ]
}

